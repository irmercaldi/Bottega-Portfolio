<h1 style="font-family: sans-serif;">Edit this Portfolio Item</h1>

<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.text_field :title, placeholder: "Title" %>
  </div>

  <div class="field">
    <%= f.text_field :subtitle, placeholder: "Subtitle" %>
  </div>

  <div class="field">
    <%= f.text_area :body, placeholder: "Enter content here" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
